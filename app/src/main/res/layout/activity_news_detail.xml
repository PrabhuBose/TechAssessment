<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.NewsDetail"
    android:orientation="vertical">

<!--    <com.google.android.material.appbar.AppBarLayout-->
<!--        android:id="@+id/app_bar_layout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@android:color/transparent"-->
<!--        app:elevation="0dp">-->

        <include
            layout="@layout/news_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
<!--    </com.google.android.material.appbar.AppBarLayout>-->


    <TextView
        android:id="@+id/article_heading"
        style="@style/title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/generic_text_label_largest_more"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_heading" />

    <TextView
        android:id="@+id/caption_and_copyright"
        style="@style/title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_image"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/generic_text_label_small" />


    <TextView
        android:id="@+id/article_details"
        style="@style/title_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caption_and_copyright"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/generic_text_label_largest_plus" />


</LinearLayout>